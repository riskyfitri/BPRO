import java.util.*;
public class ContohWhile02{
public static void main (String [] args){
  int total = 0;
    Scanner sc = new Scanner (System.in);
    System.out.println ("Masukan Angka pertama : ");
    int jml = sc.nextInt();
    int bil = 0;
    int a = 1;
    while(a<=jml){
    System.out.print("Masukan Angka kedua " + a +": ");
    bil=sc.nextInt();
    total +=bil;
    a++;
    }
    System.out.println ("Total = " + total);
    
    }
}
